<div class="row">
    <div>
        <div class="col-md-4">
            <input type="text" placeholder="Poruka" data-bind="value:message" />
            <button class="btn btn-primary" data-bind="click:sendMessage">Pošalji</button>
        </div>

        <div class="col-md-4" style="background-color: white">
            <div data-bind="foreach:messages">
                <div id="" data-bind="text: $data"> </div>
            </div>

        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.2.1.js"> </script>
    <script src="~/SignalR/hubs"> </script>  
    <script src="~/Scripts/knockout-3.4.0.js"> </script>
    <script src="~/Scripts/chatSurf.js"> </script>

