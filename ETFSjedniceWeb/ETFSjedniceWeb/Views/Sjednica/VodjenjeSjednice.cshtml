                    @Html.TextBox("StartDate", DateTime.Now, new { @class = "datepicker", @type = "date" })

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Datum završetka sjednice", new { @class = "col-md-2 control-label" })
