                    @Html.TextBox("StartDate", DateTime.Now, new { @class = "datepicker", @type = "date" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tema", null, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBox("Tema", "Rasprava o sjednici")
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Mjesto održavanja", null, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBox("Mjesto odrzavanja", "Sala S1")
                </div>
            </div>
        </div>
    }
</div>
