@model ETFSjedniceWeb.Models.SJEDNICA

@{
    ViewBag.Title = "Delete";
}


<div class="jumbotron">
<h5>Da li ste sigurni da želite obrisati ovu sjednicu?</h5>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Datum početka sjednice: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DATUM_ODRZAVANJA_OD)
        </dd>

        <dt>
            @Html.DisplayName("Datum kraja sjednice: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DATUM_ODRZAVANJA_DO)
        </dd>

        <dt>
            @Html.DisplayName("Naziv: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NAZIV)
        </dd>

        <dt>
            @Html.DisplayName("Sala: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SALA)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.STATUS_SJEDNICE_ID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.STATUS_SJEDNICE_ID)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-left:180px">
            @Html.ActionLink("Nazad", "Index") |
            <input type="submit" name="action:Delete" value="Obriši" class="btn btn-default" />
            
        </div>
    }
</div>
</div>