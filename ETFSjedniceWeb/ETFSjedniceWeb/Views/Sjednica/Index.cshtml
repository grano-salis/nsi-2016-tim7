@model IEnumerable<ETFSjedniceWeb.Models.SJEDNICA>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h4>Zakazane sjednice</h4>

    <p style="float:right;">
        @Html.ActionLink("Zakaži novu sjednicu!", "Create")
    </p>
    <table class="table table-striped" style="color:white; border-style: double; font-weight:bold; font-family:Arial; font-size:16px">
        <tr>
            <th>
                <!--  @Html.DisplayNameFor(model => model.DATUM_ODRZAVANJA_OD)-->
                POČETAK SJEDNICE
            </th>
            <th>
                <!--ml.DisplayNameFor(model => model.DATUM_ODRZAVANJA_DO)-->
                KRAJ SJEDNICE
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NAZIV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SALA)
            </th>
            <!--  <th>
                 @Html.DisplayNameFor(model => model.STATUS_SJEDNICE_ID)
              </th>-->
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DATUM_ODRZAVANJA_OD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DATUM_ODRZAVANJA_DO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NAZIV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SALA)
                </td>
                <!-- <td>
                     @Html.DisplayFor(modelItem => item.STATUS_SJEDNICE_ID)
                 </td>-->
                <td>
                    @Html.ActionLink("Kreiraj dnevni red", "ListaStavki", "StavkaDnevnogReda", new { id = item.ID }, null) |
                    @Html.ActionLink("Pozovi učesnike", "DodajUcesnike", "CvUserInfo") |
                    @Html.ActionLink("Obriši", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
</div>